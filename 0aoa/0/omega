FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 1000;

boundaryField
{
    frontAndBackPlanes
    {
        type            empty;
    }

    "(wall.*)"
    {
        type            omegaWallFunction;
        value           uniform 1000;
    }
    

    farfield
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

}

